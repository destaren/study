<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channelName"
            android:id="@+id/textView" android:layout_marginTop="10dp" android:textSize="16dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newChannelName"
            android:id="@+id/etName" android:layout_gravity="left|center_vertical"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channelURL"
            android:id="@+id/textView1" android:layout_gravity="left|center_vertical" android:textSize="16dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emptyURL"
            android:id="@+id/etUrl" android:layout_gravity="left|center_vertical"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Например, http://mix.sibnet.ru/movie/rss/"
            android:id="@+id/textView2" android:layout_gravity="center_vertical|left"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/butAddChannel" android:layout_gravity="left|center_vertical" android:textSize="16dp"
            android:layout_marginTop="20dp"/>
</LinearLayout>